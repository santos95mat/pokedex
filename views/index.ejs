<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Pokedex</title>
    <link rel="shortcut icon" href="https://assets.pokemon.com/static2/_ui/img/favicon.ico">
</head>
<body>
    <%- include('./partials/header.ejs') %>
    
    <main>
        
        <form action="/search" method="post" id="pokedados">
            <h2>Pokemons</h2>
            <input type="text" id="nome" name="nome">
            <button type="submit">
                <img src="/img/search.png" alt="">
            </button>          
        </form>

        <section id="cards">
        <% if(pesquisa.length === 0) {pokedex.forEach((pokemon) => { %>
            <a href="/detalhe/<%=pokemon.id%>">
                <div class="card">
                    <h2><%= pokemon.nome %></h2>
                    <img src="<%= pokemon.imagem %>" alt="">
                    <p><%= pokemon.tipo %></p>
                </div>
            </a>
        <% })}else {pesquisa.forEach((pokemon) => { %>
            <a href="/detalhe/<%=pokemon.id%>">
                <div class="card">
                    <h2><%= pokemon.nome %></h2>
                    <img src="<%= pokemon.imagem %>" alt="">
                    <p><%= pokemon.tipo %></p>
                </div>
            </a> 
        <% })} %>              
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>

    <script src="/js/script.js"></script>
</body>
</html>